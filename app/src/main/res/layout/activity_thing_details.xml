<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_thing_author_avatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_centerVertical="true"
                    tools:src="@drawable/aletta"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iv_thing_author_avatar"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_thing_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_thing_author_avatar"
                        android:textSize="20sp"
                        android:textColor="@color/md_white_1000"
                        tools:text="lost keys"/>
                    <TextView
                        android:id="@+id/tv_thing_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/iv_thing_author_avatar"
                        android:layout_below="@+id/tv_thing_title"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/material_grey300"
                        tools:text="lost 56 minutes ago"/>
                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:id="@+id/iv_thing_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_thing_height"
            android:layout_below="@+id/toolbar"
            tools:src="@drawable/two"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/rl_thing_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_thing_photo">

            <LinearLayout
                android:id="@+id/ll_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"/>

                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    tools:text="Electronics"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_returned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_below="@+id/ll_category">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/returned"/>

                <TextView
                    android:id="@+id/tv_returned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    tools:text="Not yet"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_thing_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_returned"
                android:layout_margin="8dp"
                android:text="@string/lost_donkey"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_things_photos"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="@dimen/thing_desc_photos_list_height"
                android:layout_below="@+id/tv_thing_description">
            </android.support.v7.widget.RecyclerView>

            <FrameLayout
                android:id="@+id/fl_map_container"
                android:layout_width="match_parent"
                android:layout_below="@+id/rv_things_photos"
                android:layout_height="150dp">
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_things_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rv_contacts">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>