<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_description_photo"
        android:layout_width="@dimen/thing_desc_photo_item_size"
        android:layout_height="@dimen/thing_desc_photo_item_size"
        android:layout_margin="@dimen/thing_desc_photo_item_margin"
        android:scaleType="centerCrop"
        tools:src="@drawable/aletta"/>

    <ImageView
        android:id="@+id/iv_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:src="@drawable/close_circle"
        android:layout_alignTop="@+id/iv_description_photo"
        android:layout_alignEnd="@+id/iv_description_photo"/>
</RelativeLayout>