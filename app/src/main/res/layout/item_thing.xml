<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/rl_thing_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/thing_header_margin" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_thing_author_avatar"
            android:layout_width="@dimen/thing_header_photo_size"
            android:layout_height="@dimen/thing_header_photo_size"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            tools:src="@drawable/aletta"/>

        <TextView
            android:id="@+id/tv_thing_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_thing_author_avatar"
            android:layout_above="@+id/tv_thing_type"
            tools:text="keys"/>

        <TextView
            android:id="@+id/tv_thing_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_thing_author_avatar"
            android:layout_toRightOf="@+id/iv_thing_author_avatar"
            android:layout_toEndOf="@+id/iv_thing_author_avatar"
            tools:text="posted in found at 12:28"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_thing_photo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_thing_height"
        android:layout_below="@+id/rl_thing_header"
        tools:src="@drawable/two"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/rl_thing_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/thing_actions_padding"
        android:layout_below="@id/iv_thing_photo">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_size"
            android:background="@null"
            android:text="@string/share"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_size"
            android:gravity="center"
            android:text="description"
            android:textColor="@color/md_black_1000"
            android:textAllCaps="true"
            android:layout_toStartOf="@+id/ib_description"
            android:layout_toLeftOf="@+id/ib_description"/>

        <ImageButton
            android:id="@+id/ib_description"
            android:layout_width="@dimen/action_size"
            android:layout_height="@dimen/action_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:src="@drawable/chevron_down"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/rl_thing_actions">

        <TextView
            android:id="@+id/tv_thing_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lost_donkey"/>
    </RelativeLayout>

</RelativeLayout>