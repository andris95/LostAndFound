<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="@color/md_grey_200">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_comment_author_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="8dp"
        tools:src="@drawable/aletta"/>

    <TextView
        android:id="@+id/tv_comment_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        tools:text="@string/lorem_ipsum_title"
        android:layout_toRightOf="@+id/iv_comment_author_avatar"
        android:layout_toEndOf="@+id/iv_comment_author_avatar"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_comment_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_comment_author"
        android:layout_toRightOf="@+id/iv_comment_author_avatar"
        android:layout_toEndOf="@+id/iv_comment_author_avatar"
        tools:text="@string/lorem_ipsum"/>
</RelativeLayout>