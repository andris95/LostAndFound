<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rl_thing_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/thing_header_margin" >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_thing_author_avatar"
                android:layout_width="@dimen/thing_header_photo_size"
                android:layout_height="@dimen/thing_header_photo_size"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                tools:src="@drawable/aletta"/>

            <TextView
                android:id="@+id/tv_thing_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/iv_thing_author_avatar"
                android:layout_above="@+id/tv_thing_type"
                tools:text="keys"/>

            <TextView
                android:id="@+id/tv_thing_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_thing_author_avatar"
                android:layout_toRightOf="@+id/iv_thing_author_avatar"
                android:layout_toEndOf="@+id/iv_thing_author_avatar"
                tools:text="posted in found at 12:28"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_thing_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_thing_height"
            android:layout_below="@+id/rl_thing_header"
            tools:src="@drawable/two"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:id="@+id/rl_thing_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_thing_photo">

            <TextView
                android:id="@+id/tv_thing_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/lost_donkey"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_things_photos"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="@dimen/thing_desc_photos_list_height"
                android:layout_below="@+id/tv_thing_description">
            </android.support.v7.widget.RecyclerView>

            <FrameLayout
                android:id="@+id/fl_map_container"
                android:layout_width="match_parent"
                android:layout_below="@+id/rv_things_photos"
                android:layout_height="150dp">
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_things_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fl_map_container">
            </android.support.v7.widget.RecyclerView>

            <EditText
                android:id="@+id/edt_thing_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionSend"
                android:layout_below="@+id/rv_things_comments"
                android:hint="@string/add_a_comment"/>

            <Button
                android:id="@+id/btn_send_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edt_thing_comment"
                android:text="send"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>