<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sanislo.lostandfound">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- for Google Maps -->
    <!--We need the WRITE_EXTERNAL_STORAGE permissions, but only on Android 5.1
    and below, so we can use android:maxSdkVersion="22" to only request that
    permission on older devices-->
    <uses-permission
        android:maxSdkVersion="22"
        android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".LostAndFoundApplication">
        <activity android:name=".view.authentication.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.authentication.SignupActivity" />
        <activity android:name=".view.things.ThingsActivity" />
        <activity android:name=".view.thingDetails.ThingDetailsActivity" />
        <activity
            android:name=".view.addThing.AddThingActivity"
            android:windowSoftInputMode="adjustPan|stateHidden">
        </activity>
        <activity android:name=".view.thingDetails.DescriptionPhotosActivity" />
        <activity android:name=".view.profile.ProfileActivity" />
        <activity android:name=".view.search.SearchActivity">
            <meta-data android:name="android.app.searchable"
                       android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".view.map.MapActivity" />

        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
                  android:theme="@style/Base.Theme.AppCompat"/> <!-- optional (needed if default theme has no action bar) -->

        <service
            android:name=".notifications.LostAndFoundMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name=".notifications.TokenChangeListenerService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <!--<service
            android:name="com.amazonaws.mobileconnectors.s3.transferutility.TransferService"
            android:enabled="true" />-->

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDzTcBPeBMGRKHynuMkZx0VrSmnT-40Qgc"/>

    </application>

</manifest>